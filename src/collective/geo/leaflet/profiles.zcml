
<configure xmlns="http://namespaces.zope.org/zope"
  xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
  xmlns:i18n="http://namespaces.zope.org/i18n"
  xmlns:zcml="http://namespaces.zope.org/zcml"
  i18n_domain="collective.geo.leaflet">

  <genericsetup:registerProfile
      name="common"
      title="Plone Maps (collective.geo) with Leaflet common profile for extension by Plone 4 / Plone 5 profiles."
      directory="profiles/default"
      description="Installs the collective.geo.leaflet add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:registerProfile
      name="default"
      title="Plone Maps (collective.geo) with Leaflet Plone 5"
      description="Extension profile for Plone Maps (collective.geo) with Leaflet for Plone 5"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      directory="profiles/plone5"
      zcml:condition="have plone-5"
      />

  <genericsetup:registerProfile
      name="default"
      title="Plone Maps (collective.geo) with Leaflet for Plone 4"
      description="Extension profile for Plone Maps (collective.geo) with Leaflet for Plone 4"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      directory="profiles/plone4"
      zcml:condition="not-have plone-5"
      />

  <genericsetup:registerProfile
      name="uninstall"
      title="Uninstall Plone Maps (collective.geo) with Leaflet"
      directory="profiles/uninstall"
      description="Installs the collective.geo.leaflet add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <genericsetup:importStep
      name="collective.geo.leaflet-postInstall"
      title="collective.geo.leaflet post_install import step"
      description="Post install import step from collective.geo.leaflet"
      handler=".setuphandlers.post_install">
  </genericsetup:importStep>

  <genericsetup:upgradeStep
    title="Add markercluster"
    description="Add markercluster plugin and use it"
    source="1"
    destination="2"
    sortkey="1"
    handler=".upgradehandlers.upgrade_1_to_2"
    profile="collective.geo.leaflet:default"
    />

</configure>
